#include <stdio.h>
#include <stdlib.h>
#include "windows.h"

void gotoxy      (int x, int y);


int main()
{
    int x, y, v;

    char ch=0;

    y=20;
    x=20;
    v=5;

          gotoxy(20,20);
    do
    {
        inicio (x,y);
        ch= getch();
        if (ch=='0') printf("__"),gotoxy(x++,y);
        if (ch=='1') printf("/"),gotoxy(x++,y--);
        if (ch=='2') printf("|"),gotoxy(x,y--);
        if (ch=='3') printf("\x5c"), gotoxy(x--,y--);
        if (ch=='4') printf("__"),gotoxy(x--,y);
        if (ch=='5') printf("/"), gotoxy(x--,y++);
        if (ch=='6') printf("|"), gotoxy(x,y++);
        if (ch=='7') printf("\x5c"), gotoxy(x++,y++);
        if (ch=='a') system("cls"), gotoxy(20,20);
        if (ch=='9') printf("\n"), gotoxy(x,y++);
    }
    while (ch!='8');
    gotoxy(60,15);
    printf(" fim\n\n\n\n\n");
return 0;
}


void gotoxy(int x, int y)
{
    COORD p={0,0};
    p.X= x, p.Y= y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),p);
}

void inicio (int x, int y)
{
    gotoxy(x,y);
}

